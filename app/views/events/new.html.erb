<div class="row">
  <div class="col-md-8 mx-auto">
    <h2 class="mb-4">Creer un nouvel évènement</h2>

    <% if @event.errors.any? %>
      <div class="alert alert-danger">
        <p><strong>Nous n'avons pas reussi a creer l'évènement pour la (ou les) raison(s) suivante(s) :</strong></p>
        <ul class="mb-0">
          <% @event.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <%= form_with(model: @event, local: true) do |f| %>
      <div class="mb-3">
        <%= f.label :title, "Titre", class: "form-label" %>
        <%= f.text_field :title, class: "form-control", placeholder: "Titre de l'évènement (3 a 14 caracteres)" %>
      </div>

      <div class="mb-3">
        <%= f.label :content, "Contenu", class: "form-label" %>
        <%= f.text_area :content, class: "form-control", rows: 5, placeholder: "Ecrivez votre évènement ici..." %>
      </div>

      <div class="mb-3">
        <%= f.label :price, "Prix", class: "form-label" %>
        <%= f.number_field :price, class: "form-control", step: 0.01, placeholder: "Prix de l'évènement (ex: 19.99)" %>
      </div>
      <div class="mb-3">
        <%= f.label :date, "Date", class: "form-label" %>
        <%= f.datetime_select :date, class: "form-control" %> 
      </div>
      <div class="mb-3">
        <%= f.label :location, "Lieu", class: "form-label" %>
        <%= f.text_field :location, class: "form-control", placeholder: "Lieu de l'évènement (ex: Paris, France)" %>
      </div>

      <div class="d-grid">
        <%= f.submit "Publier l'évènement", class: "btn btn-primary" %>
      </div>
    <% end %>
  </div>