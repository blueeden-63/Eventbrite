<div class="jumbotron">
  <div class="container">
    <h1 class="display-4">Bienvenue sur Eventbrite!</h1>
    <p class="lead">Découvrez les meilleurs événements près de vous</p>
  </div>
</div>

<div class="container mt-5">
  <h2 class="mb-4">Événements disponibles</h2>
  <div class="row">
    <% @events.each do |event| %>
      <div class="col-md-4 mb-4">
        <div class="card">
          <div class="card-body">
            <h5 class="card-title"><%= event.title %></h5>
            <p class="card-text"><%= truncate(event.description, length: 100) %></p>
            <p class="text-muted">
              <strong>Lieu:</strong> <%= event.location %><br>
              <strong>Prix:</strong> <%= event.price %>€<br>
              <strong>Date:</strong> <%= event.start_date.strftime("%d/%m/%Y") %>
            </p>
            <%= link_to "Voir l'événement", event_path(event), class: "btn btn-primary" %>
          </div>
        </div>
      </div>
    <% end %>
  </div>