<div class= "container mt-5">
  <h1 class="display-4 text-center mb-5">Ev√®nements</h1>
  
  <div class="row">
    <% @events.each do |event| %>
      <div class="col-md-4 mb-4">
        <div class="card h-100 shadow-sm">
          <div class="card-body d-flex flex-column">
            <h5 class="card-title"><%= event.title %></h5>
            <p class="card-text"><%= truncate(event.description, length: 100) %></p>
            <p class="card-text mt-auto"><strong>Price:</strong> $<%= event.price %></p>
            <%= link_to "View Event", event_path(event), class: "btn btn-primary mt-3" %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>